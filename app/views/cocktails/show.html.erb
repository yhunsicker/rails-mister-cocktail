<h2><%= @cocktail.name %></h2>


  <%= link_to 'Back', cocktails_path %>


  <h3>Recipe</h3>
  <table class="table table-bordered">
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
      </thead>

      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>
        <td> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <p>delete</p>
          <% end %>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>


      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f. submit "Add Ingredients", class: "btn btn-success" %>
      </p>
      <% end %>





  <h3>Reviews</h3>
  <% if @cocktail.reviews.empty? %>
  <p>Write your review</p>
  <% else %>
  <ul>
    <% @cocktail.reviews.each do |review| %>
    <li>
        <% counter = 0 %>
        <% 5.times do %>
        <% counter += 1 %>
        <% end %>
      </span>
      <%= review.content %>
    </li>
    <% end %>
  </ul>
  <% end %>


<%= render "reviews/new", cocktail: @cocktail, review: @review %>

