  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= @cocktail.name %></h1>
        <%= link_to "Back to all cocktails", root_path, class: "btn btn-success"%>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3>Recipe</h3>
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
            </thead>

            <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do%>
                <p><i class="far fa-trash-alt"></i></p>
                <% end %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-sm-12 col-md-6"> <%= render "doses/new", cocktail: @cocktail, doses: @dose %>
      </div>
    </div>

    <div class "row">
      <div class = "col-xs-12">
        <% if @cocktail.reviews.empty? %>
       <!--  <p>Write your review</p> -->
        <% else %>
         <% @cocktail.reviews.each do |review| %>
            <% counter = 0 %>
            <% 5.times do %>
            <% counter += 1 %>
            <% end %>
          </span>
          <%= review.content %>
        <% end %>
      <% end %>

    </div>
  </div>

  <div class=""row">
    <div class="col-xs-12">

      <%= render "reviews/new", cocktail: @cocktail, review: @review %>
    </div>
  </div>
</div>

